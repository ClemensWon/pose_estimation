<?xml version="1.0"?>
<launch>

    <!-- Gazebo Simulation -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
    </include>



    <!-- Load URDF Description -->
    <param name="robot_description" command="$(find xacro)/xacro $(find ur_description)/urdf/ur5.xacro"/>


    <!-- Spawn Table -->
    <node name="spawn_table" pkg="gazebo_ros" type="spawn_model" 
          args="-file $(find pose_estimation)/param/table/model.sdf -sdf -model table -x 0 -y 0 -z 0.5"/>


    <!-- Spawn Table 2 -->
    <node name="spawn_table_2" pkg="gazebo_ros" type="spawn_model" 
          args="-file $(find pose_estimation)/param/table/model.sdf -sdf -model table_2 -x 0 -y 0.5 -z 0.5"/>

    <!-- Spawn Robot -->
    <node name="spawn_robot" pkg="gazebo_ros" type="spawn_model" 
          args="-urdf -param robot_description -model ur5 -x 0 -y -0.5 -z 0.5"/>



    <!-- Start RVIZ -->
    <!-- <node pkg="rviz" type="rviz" name="rviz" args="-d $(find pose_estimation)/rviz/pose_estimation.rviz"/>-->
</launch>

